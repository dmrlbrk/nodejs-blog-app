<section id="contact" class="md-padding">
	<div class="container">

		<div class="row text-center">
			<div class="col-md-4 offset-md-4">
				<div class="section-header">
					<h2 class="title">Edit Post</h2>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<form action="/admin/posts/{{post._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
					<input type="hidden" name="method" value="PUT">
					<div class="row">
						<div class="offset-2 col-md-8">
							<div class="form-group">
								<input class="form-control" name="title" type="text" 
									required="required" data-validation-required-message="Please enter your title." placeholder="Your Title *" value="{{post.title}}">
								<p class="help-block text-danger"></p>
							</div>

							<div class="form-group">
								<textarea class="form-control" name="content" type="content" placeholder="Your Post *"
									required="required"
									data-validation-required-message="Please enter a content." >{{post.content}}</textarea>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<select class="form-control" name="category" required="required"
									data-validation-required-message="Please select your category."
									>
									{{#each categories}}
									<option value="{{this._id}}" {{isSelected ../post/category this._id}}>{{this.name}}</option>
									{{/each}}
								</select>
								<p class="help-block text-danger"></p>
								{{#each categories}}
									<p>{{isSelected ../post/category this._id  }}</p>
								{{/each}}
							</div>
							<div class="form-group">
								<input class="form-control" name="post_image" type="file" required="required"
									data-validation-required-message="Please enter your title.">
								<p class="help-block text-danger"></p>
							</div>

						</div>


						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="main-btn" type="submit">Edit Post</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>
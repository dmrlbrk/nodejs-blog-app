============================-->
<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">BLOG</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="blog" class="md-padding">
    <div class="container">
        <div class="row">
            <main id="main" class="col-md-8">
                <div class="blog">
                    <div class="blog-img">
                        <img class="img-fluid" src="{{post.post_image}}" alt="">
                    </div>
                    <div class="blog-content">
                        <ul class="blog-meta">
                            <li><i class="fas fa-user"></i>{{post.author.username}}</li>
                            <li><i class="fas fa-clock"></i>{{dateFormat date 'MMM DD YYYY'}}</li>
                            <li><i class="fas fa-comments"></i>{{post.comments.length}}</li>
                        </ul>
                        <h3>{{post.title}}</h3>
                        <p>{{post.content}}</p>
                    </div>


                    <!-- blog comments -->
                    <div class="blog-comments">
                        <h3>({{post.comments.length}}) Comments</h3>

                        <!-- comment -->
                        {{#each post.comments}}
                        <div class="media">
                            <div class="media-body">
                                <h4 class="media-heading">{{name}}<span class="time">{{dateFormat date 'MMM DD YYYY'}}</span></h4>
                                <p>{{body}}</p>
                            </div>
                        </div>
                        {{/each}}
                        <!-- /comment -->

                    </div>
                    <!-- /blog comments -->

                    <!-- reply form -->
                    <div class="reply-form">
                        <h3>Leave A Comment</h3>
                        <form method="POST" action="/posts/comment">
                            <input type="hidden" name="postId" value="{{post._id}}">
                            <input class="form-control mb-4" type="text" name="name" placeholder="Name">
                            <input class="form-control mb-4" type="text" name="email" placeholder="Email">
                            <textarea class="form-control mb-4" row="5" name="body"
                                placeholder="Add Your Commment"></textarea>

                            <button type="submit" class="main-btn">Submit</button>
                        </form>
                    </div>
                    <!-- /reply form -->
                </div>
            </main>
            <!-- /Main -->



            <!-- Sidebar -->
            {{> site-sidebar}}
            <!-- /Sidebar -->




        </div>

    </div>
</section>